{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Trade Dynamics: Yearly Trends and Top 5 Trading Partners (2013-2020)",
    "subtitle": "Hint: Select a year range by brushing over the area chart on the left to filter the bar chart on the right by year",
    "anchor": "middle",
    "subtitleFont": "Afacad Flux"
  },
  "hconcat": [
    {
      "width": 300,
      "height": 270,
      "title": {
        "text": "Australia's Import and Export Evolution Over Time",
        "fontSize": 16,
        "anchor": "middle"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/mind0002/FIT3179-Assignment2/refs/heads/main/data/last_data.csv"
      },
      "transform": [
        {
          "aggregate": [
            {"op": "sum", "field": "Import", "as": "Import"},
            {"op": "sum", "field": "Export", "as": "Export"}
          ],
          "groupby": ["Year"]
        },
        {"fold": ["Import", "Export"], "as": ["Trade_Type", "Trade_Value"]},
        {"calculate": "year(datum.Year)", "as": "data_year"}
      ],
      "mark": "area",
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": "Year"},
        "y": {
          "field": "Trade_Value",
          "type": "quantitative",
          "title": "Trade Value ($m)"
        },
        "color": {
          "field": "Trade_Type",
          "type": "nominal",
          "scale": {
            "domain": ["Import", "Export"],
            "range": ["#a1d99b", "#3a7563"]
          },
          "legend": {
            "title": "Trade Type",
            "orient": "none",
            "legendX": 730,
            "legendY": 10,
            "titleFontSize": 14,
            "labelFontSize": 12
          }
        },
        "tooltip": [
          {"field": "data_year", "type": "quantitative", "title": "Year"},
          {"field": "Trade_Type", "type": "nominal", "title": "Trade Type"},
          {
            "field": "Trade_Value",
            "type": "quantitative",
            "title": "Trade Value ($m)",
            "format": "~s"
          }
        ]
      },
      "selection": {"brush": {"type": "interval", "encodings": ["x"]}}
    },
    {
      "width": 300,
      "height": 280,
      "title": {
        "text": "Top 5 Countries by Total Trade (Imports and Exports)",
        "fontSize": 16,
        "anchor": "middle"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/mind0002/FIT3179-Assignment2/refs/heads/main/data/last_data.csv"
      },
      "transform": [
        {
          "filter": "length(data('brush_store')) == 0 || (datum.Year >= data('brush_store')[0].values[0][0] && datum.Year <= data('brush_store')[0].values[0][1])"
        },
        {
          "aggregate": [
            {"op": "sum", "field": "Import", "as": "Import"},
            {"op": "sum", "field": "Export", "as": "Export"}
          ],
          "groupby": ["Country"]
        },
        {
          "calculate": "datum.Import + datum.Export",
          "as": "Total_Trade"
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "Total_Trade", "order": "descending"}]
        },
        {"filter": "datum.rank <= 5"},
        {
          "fold": ["Import", "Export"],
          "as": ["Trade_Type", "Trade_Value"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Country",
          "type": "nominal",
          "axis": {"title": "Country"},
          "sort": "-x"
        },
        "x": {
          "field": "Trade_Value",
          "type": "quantitative",
          "title": "Trade Value ($m)",
          "axis": {"format": "~s"}
        },
        "color": {
          "field": "Trade_Type",
          "type": "nominal",
          "scale": {
            "domain": ["Import", "Export"],
            "range": ["#c44e52", "#4c72b0"]
          },
          "legend": {
            "title": "Trade Type",
            "orient": "none",
            "legendX": 500,
            "legendY": 10,
            "titleFontSize": 16,
            "labelFontSize": 14
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Trade_Type", "type": "nominal", "title": "Trade Type"},
          {
            "field": "Trade_Value",
            "type": "quantitative",
            "title": "Trade Value ($m)",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {
      "labelFont": "Afacad Flux",
      "titleFont": "Afacad Flux",
      "titleFontSize": 16,
      "labelFontSize": 14
    },
    "legend": {
      "labelFont": "Afacad Flux",
      "titleFont": "Afacad Flux",
      "titleFontSize": 14,
      "labelFontSize": 12
    },
    "header": {"labelFont": "Afacad Flux", "titleFont": "Afacad Flux"},
    "title": {"font": "Afacad Flux", "fontSize": 20, "fontWeight": 600}
  }
}
